<% if (success && success.length) { %>
    <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative" role="alert">
        <span class="block sm:inline"><%= success %></span>
        <button type="button" class="absolute top-0 bottom-0 right-0 px-4 py-3 text-green-500" data-dismiss="alert" aria-label="Close" onclick="this.parentElement.style.display='none';">
            <svg class="fill-current h-6 w-6 text-green-500" role="button" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20"><title>Close</title><path d="M14.348 14.849a1 1 0 01-1.414 0L10 11.414 7.066 14.35a1 1 0 01-1.414-1.415l2.933-2.933L5.652 7.566a1 1 0 111.414-1.414L10 8.586l2.933-2.933a1 1 0 111.414 1.414l-2.933 2.933 2.933 2.933a1 1 0 010 1.415z"/></svg>
        </button>
    </div>
<% } %>

<% if (error && error.length) { %>
    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative" role="alert">
        <span class="block sm:inline"><%= error %></span>
        <button type="button" class="absolute top-0 bottom-0 right-0 px-4 py-3 text-red-500" data-dismiss="alert" aria-label="Close" onclick="this.parentElement.style.display='none';">
            <svg class="fill-current h-6 w-6 text-red-500" role="button" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20"><title>Close</title><path d="M14.348 14.849a1 1 0 01-1.414 0L10 11.414 7.066 14.35a1 1 0 01-1.414-1.415l2.933-2.933L5.652 7.566a1 1 0 111.414-1.414L10 8.586l2.933-2.933a1 1 0 111.414 1.414l-2.933 2.933 2.933 2.933a1 1 0 010 1.415z"/></svg>
        </button>
    </div>
<% } %>
